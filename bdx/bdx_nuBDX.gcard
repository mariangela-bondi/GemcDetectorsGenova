<gcard>
<option name="DBHOST" value="clasdb.jlab.org"/>
<option name="DATABASE" value="clas12_simulation"/>
<option name="HIT_PROCESS_LIST" value="BDX"/>
<option name="PHYSICS"   value="FTFP_BERT_HP + STD + HP" />

	
<detector name="bdx" factory="TEXT" variation="nuBDX"/>
<option name="geometry" value="900x600"/>
<option name="HALL_MATERIAL"   value="Vacuum" />
<option name="HALL_DIMENSIONS" value="100.*m,100.*m,250.*m" />
	
  
<option name="INTEGRATEDRAW" value="flux"/>
  
<option name="BEAM_P"   value="e-, 11.*GeV, 0*deg, 0*deg"/>
<option name="SPREAD_P" value="0*GeV, 0*deg, 0*deg"/>
<option name="BEAM_V" value="(0.,0.,-300.)cm"/>
<option name="SPREAD_V" value="(0.,0.)cm"/>
<option name="OUTPUT" value="evio, out.evio"/>

<option name="MAX_X_POS"   value="20000." />
<option name="MAX_Y_POS"   value="30000." />
<option name="MAX_Z_POS"   value="50000." />
<option name="PRODUCTIONCUT"   value="1*mm" />
<option name="SAVE_ALL_MOTHERS"   value="1" />
<option name="RECORD_PASSBY" value="1" />



</gcard>
